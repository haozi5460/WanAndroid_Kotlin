<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/navigation_header_account_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            app:roundAsCircle="true"
            app:placeholderImage="@mipmap/ic_big_head"
            app:roundingBorderColor="@android:color/white"
            app:roundingBorderWidth="1px"/>

    <TextView
        android:id="@+id/account_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="haozi"
        android:textColor="#4d4d4d"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/navigation_header_account_icon"/>

    <View
        android:id="@+id/head_line_divide"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="1dp"
        android:background="#d6d6d6"
        android:layout_below="@+id/account_name"/>


    <TextView
        android:id="@+id/main_menu_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_line_divide"
        android:padding="20dp"
        android:text="收藏"
        android:textColor="#4d4d4d"
        android:textSize="16sp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bg_click_selector"/>

    <View
        android:id="@+id/collection_line_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_below="@+id/main_menu_collection"/>


    <TextView
        android:id="@+id/main_menu_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collection_line_divide"
        android:padding="16dp"
        android:text="ToDo"
        android:textColor="#4d4d4d"
        android:textSize="16sp"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/bg_click_selector"/>

    <View
        android:id="@+id/todo_line_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_below="@+id/main_menu_todo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_above="@+id/main_menu_logout"/>

    <TextView
        android:id="@+id/main_menu_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="20dp"
        android:text="退出"
        android:focusable="true"
        android:clickable="true"
        android:textColor="@color/color_3a94da"
        android:textSize="16sp"
        android:background="@drawable/bg_click_selector"/>
</RelativeLayout>